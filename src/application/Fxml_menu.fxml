<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>

<GridPane fx:controller="application.FXMLMenuController" 
		  xmlns:fx="http://javafx.com/fxml/1" alignment="center"
		  	hgap="10" vgap="10" >
		  	
	<Text id="game-text" text="GAME" GridPane.columnIndex="0" GridPane.rowIndex="0"
		GridPane.columnSpan="4" />
		
		
	<HBox spacing="30" alignment="center" GridPane.columnIndex="0"
		GridPane.rowIndex="4">
		<Button text="Play" onAction="#handleSubmitButtonAction" />
	</HBox>
	
	<Text fx:id="actiontarget" GridPane.columnIndex="1"
		GridPane.rowIndex="6" />

	<stylesheets>
    <URL value="@application.css" />
  	</stylesheets>
</GridPane>

