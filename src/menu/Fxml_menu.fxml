<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>

<GridPane fx:controller="menu.FXMLMenuController" 
          xmlns:fx="http://javafx.com/fxml/1" alignment="center"
          gridLinesVisible="true" >

    <columnConstraints >
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints  valignment="TOP" minHeight="155.0" maxHeight="155.0" vgrow="SOMETIMES" />
        <RowConstraints  minHeight="55.0" maxHeight="55.0" vgrow="SOMETIMES" />
        <RowConstraints  minHeight="55.0" maxHeight="55.0" vgrow="SOMETIMES" />
    </rowConstraints>
                            
		  	
    <Text id="game-text" text="GAME" GridPane.rowIndex="0"
              GridPane.columnSpan="4" />
		
		
    <HBox spacing="30" alignment="center"
              GridPane.rowIndex="1">
        <Button text="Play" onAction="#handleSubmitButtonAction" />
    </HBox>
	
    <Text fx:id="actiontarget"
              GridPane.rowIndex="2" />

    <stylesheets>
        <URL value="@application.css" />
    </stylesheets>
</GridPane>

